<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.main.fragment.TodayFragment">

    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/text_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Me"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_text"
                    android:paddingTop="60dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    tools:ignore="HardcodedText" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="MY WEIGHTS"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_text"
                    android:letterSpacing="0.04"
                    tools:ignore="HardcodedText" />

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/primary_light">
                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_weights"
                        android:layout_marginStart="-40dp"
                        android:layout_marginEnd="-40dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">
                    <TextView
                            android:id="@+id/text_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text=""
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="KG"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>
                </FrameLayout>

                <View android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#4D5A5A5A"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"/>
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">
                    <TextView
                            android:id="@+id/text_height"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text=""
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="CM"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>
                </FrameLayout>

                <View android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#4D5A5A5A"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"/>

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">
                    <TextView
                            android:id="@+id/text_bmi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text=""
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="BMI"
                            android:textSize="15sp"
                            android:textStyle="normal"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/layout_weights"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <View android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#4D5A5A5A"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"/>
                <androidx.cardview.widget.CardView
                        android:id="@+id/btn_close_weight"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="end"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/grey_transparent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                    <ImageView
                            android:fitsSystemWindows="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_close"
                            android:scaleX="0.50"
                            android:scaleY="0.50"
                            android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW WEIGHT"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:letterSpacing="0.04"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText" />

                    <Button
                            android:id="@+id/btn_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:textSize="15sp"
                            android:text="KG"
                            android:layout_gravity="end"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            tools:ignore="HardcodedText" />

                </FrameLayout>

                <com.google.android.material.slider.Slider
                        android:id="@+id/slider_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:stepSize="1.0"
                        android:valueFrom="20"
                        android:valueTo="150" />

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW HEIGHT"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:letterSpacing="0.04"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText" />

                    <Button
                            android:id="@+id/btn_height"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:textSize="15sp"
                            android:text="CM"
                            android:layout_gravity="end"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            tools:ignore="HardcodedText" />
                </FrameLayout>

                <com.google.android.material.slider.Slider
                        android:id="@+id/slider_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="10dp"
                        android:stepSize="1.0"
                        android:valueFrom="80"
                        android:valueTo="220" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/btn_record_weight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="15sp"
                    android:text="RECORD NEW WEIGHTS"
                    android:layout_gravity="center"
                    android:textColor="@color/black_text"
                    app:cornerRadius="25dp"
                    app:backgroundTint="@color/grey_background"
                    tools:ignore="HardcodedText" />

            <View android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#4D5A5A5A"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="MY CALORIE GOAL"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_text"
                    android:letterSpacing="0.04"
                    tools:ignore="HardcodedText" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">
                    <TextView
                            android:id="@+id/text_goal_current"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text=""
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="CURRENT INTAKE"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>
                </FrameLayout>

                <View android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#4D5A5A5A"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"/>
                <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">
                    <TextView
                            android:id="@+id/text_goal_total"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text=""
                            android:textSize="35sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="GOAL (kCal)"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="@color/black_text"
                            android:letterSpacing="0.04"
                            android:gravity="center"
                            android:textAlignment="center"
                            tools:ignore="HardcodedText"/>
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                    android:id="@+id/layout_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <View android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#4D5A5A5A"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"/>
                <androidx.cardview.widget.CardView
                        android:id="@+id/btn_close_goal"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="end"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/grey_transparent"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp">
                    <ImageView
                            android:fitsSystemWindows="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_close"
                            android:scaleX="0.50"
                            android:scaleY="0.50"
                            android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW GOAL"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:letterSpacing="0.04"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/grey_text"
                            tools:ignore="HardcodedText" />

                    <Button
                            android:id="@+id/btn_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:textSize="15sp"
                            android:text="kCal"
                            android:layout_gravity="end"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            tools:ignore="HardcodedText" />

                </FrameLayout>

                <com.google.android.material.slider.Slider
                        android:id="@+id/slider_goal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:stepSize="100.0"
                        android:valueFrom="0"
                        android:valueTo="4000" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/btn_record_goal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="15sp"
                    android:text="SET MY GOAL"
                    android:layout_gravity="center"
                    android:textColor="@color/black_text"
                    app:cornerRadius="25dp"
                    app:backgroundTint="@color/grey_background"
                    tools:ignore="HardcodedText" />

            <View android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#4D5A5A5A"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="SETTINGS"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_text"
                    android:letterSpacing="0.04"
                    tools:ignore="HardcodedText" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_integrated_camera"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    android:text="USE INTEGRATED CAMERA"
                    android:letterSpacing="0.04"
                    tools:ignore="HardcodedText" />

            <View android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#4D5A5A5A"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>

            <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/btn_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="15sp"
                    android:text="DELETE MY ACCOUNT"
                    android:layout_gravity="center"
                    app:cornerRadius="25dp"
                    app:backgroundTint="#DA5050"
                    android:textColor="@color/white_text"
                    tools:ignore="HardcodedText" />

            <View android:layout_width="match_parent"
                    android:layout_height="0.0dp"
                    android:background="#4D5A5A5A"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="100dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>